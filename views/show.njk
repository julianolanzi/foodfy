{% extends "layout.njk" %}

{%block head%}
<title>FoodFy - {{recipe.title}}</title>
{%endblock%}

{% block content %}

    <section class="banner-show">

        <img alt="{{recipe.title}}" src="{{recipe.image}}" title="{{recipe.title}}">
        <h1>{{recipe.title}}</h1>
        <p>por
            {{recipe.author}}</p>

    </section>

    <section class="descripition">

        <div class="descripition-ct">
            <div class="ttitle">
                <h2>Ingredientes</h2>
                <input type="button" class="bts" id="bra" value="Esconder" onclick="mostra('ra')">
            </div>

            <div id="ra" class="hidden">
                <ul>
                    {% for ingredients in recipe.ingredients %}
                        <li>{{ingredients}}</li>
                        {%endfor%}
                    </ul>
            </div>
        </div>

        <div class="descripition-ct">
            <div class="ttitle">
                <h2>Modo de Preparo</h2>
                <input class="bts" type="button" id="brb" value="Esconder" onclick="mostra('rb')">
            </div>

            <div id="rb" class="hidden">

                {% for preparation in recipe.preparation %}
                    <p>{{preparation}}</p>
                    {%endfor%}

            </div>
        </div>

        <div class="descripition-ct">
                <div class="ttitle">
                    <h2>Informações adicionais</h2>
                    <input class="bts" type="button" id="brc" value="Esconder" onclick="mostra('rc')">
                </div>

                <div id="rc" class="hidden">
                    <p>{{recipe.information}}</p>
                </div>
        </div>
            </section>

            {%endblock%}
{% extends "admin/layout.njk" %}

{%block head%}
    <title>Admin - {{recipe.title}}</title>
    {%endblock%}

    {% block content %}
        <section class="container-topo">
            <div class="container-title">
                <h1>Receita - {{recipe.title}} </h1>
            </div>
            <div class="container-botao">
                

                    <a href="/admin/recipes/{{ recipe.id }}/edit" class="btn"> <i class="fas fa-edit"></i> Editar Receita</a>
            </div>
        </section>

        <section class="banner-show">

            <img alt="{{recipe.title}}" src="{{recipe.imagem_url}}" title="{{recipe.title}}">
            <h1>{{recipe.title}}</h1>
            <p>por - {{recipe.chef_name}}</p>

        </section>

        <section class="container_datails">

            <div class="descripition-recipes">
                <div class="ttitle">
                    <h2>Ingredientes</h2>
                    <input type="button" class="bts" id="bra" value="Esconder" onclick="mostra('ra')">
                </div>

                <div id="ra" class="hidden">
                    <ul>
                        {% for ingredients in recipe.ingredients %}
                            <li>{{ingredients}}</li>
                            {%endfor%}
                        </ul>
                    </div>
                </div>

                <div class="descripition-ct">
                    <div class="ttitle">
                        <h2>Modo de Preparo</h2>
                        <input class="bts" type="button" id="brb" value="Esconder" onclick="mostra('rb')">
                    </div>

                    <div id="rb" class="hidden">

                        {% for preparation in recipe.preparation %}
                            <p>{{preparation}}</p>
                            {%endfor%}

                        </div>
                    </div>

                    <div class="descripition-ct">
                        <div class="ttitle">
                            <h2>Informações adicionais</h2>
                            <input class="bts" type="button" id="brc" value="Esconder" onclick="mostra('rc')">
                        </div>

                        <div id="rc" class="hidden">
                            <p>{{recipe.information}}</p>
                        </div>
                    </div>

                    <div class="descripition-ct">
                        <div class="ttitle">
                            <h2>Tempo de preparo</h2>
                        </div>

                        <div>
                            <p>{{recipe.time_preparation}}</p>
                        </div>
                    </div>
                    <div class="descripition-ct">
                        <div class="ttitle">
                            <h2>Esse prato serve </h2>
                        </div>
                    <div>
                            <p>{{recipe.eat_people}} Pessoas</p>
                        </div>
                        
                    </div>
                </section>

                {%endblock%}
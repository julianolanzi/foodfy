{% extends "admin/layout.njk" %}

{%block head%}
    <title>FoodFy -
        {{chef.name}}</title>
    {%endblock%}

    {% block content %}
        <section class="container-topo">
            <div class="container-title">
                <h1>Chef - {{chef.name}} </h1>
            </div>
            <div class="container-botao">
                

                    <a href="/admin/chefs/{{ chef.id }}/edit" class="btn"> <i class="fas fa-edit"></i> Editar Chef</a>
            </div>
        </section>

        <section class="banner-chef">

            <img alt="{{chef.title}}" src="{{chef.avatar_url}}" title="{{chef.title}}">
            <h1>{{chef.name}}</h1>
            <p>{{chef.total_recipes}} - receitas</p>

        </section>

       <div class="cards">
            {% for recipe in recipes %}
                <div class="card grid-template-areas">

                    <div class="card-img"><img src="{{ chef.recipe.imagem_url }}" styele=" wi" alt="{{ recipe.title }}"></div>
                    <div class="card-title">
                        <p>{{ chef.recipe.title }}</p>
                    </div>
                    <div class="cardby">
                        <p>por {{ recipe.title }}</p>
                    </div>
                    <div class="link">
                        <a href="/admin/recipes/{{recipe.id}}">Visualizar</a>
                    </div>

                </div>
            {% endfor %}
        </div>

                {%endblock%}
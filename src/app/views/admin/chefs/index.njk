{% extends "admin/layout.njk" %}

{%block head%}
    <title>
        Admin FoodFy - Gerenciar Chefs</title>
    {%endblock%}

    {% block content %}

        <section class="container-topo">
            <div class="container-title"">
                <h1>Gerenciar Chefs</h1>
            </div>
            <div class="container-botao">
                
                <a class="btn" href="/admin/chefs/create">
                    <i class="fas fa-plus-square"></i>
                     Novo Chef</a>
            </div>
        </section>

        
           

            <div class="cards_container">
                {% for chef in chefs %}
                <div class="card_chef">
                    <div class="chef-img"><img src="{{ chef.avatar_url }}" alt="{{ chef.name }}"></div>
                    
                    <div class="cardinfos">
                    <div class="chef_name">
                        <p>{{ chef.name }}</p>
                    </div>
                    <div class="visualiza_chef">
                        <a href="/admin/chefs/{{chef.id}}">Visualizar</a>
                    </div>
                  
                    </div>
                </div>

                {% endfor %}
            </div>

        

    {% endblock %}